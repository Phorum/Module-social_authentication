#phorum .social_authentication_providers {
    overflow: hidden;
    margin: 20px 0 10px 0;
}

#phorum .social_authentication_provider {
    float: left;
    padding: 5px;
}

#phorum #social_authentication_authform {
    display: none;
    float: left;
}

#phorum #social_authentication_progress {
    display: none;
    float: left;
}

#phorum #social_authentication_error {
    display: none;
    padding: 8px;
    border: 1px solid #A76262;
    background: #FFD1D1;
    color: black;
    margin: 1em 0 0 0;
}

/* This table structure is used for aligning the provider
   button image with the login authform and progress elements. */
#phorum .social_authentication_login table {
    height: 42px;
    padding-left: 5px;
}
